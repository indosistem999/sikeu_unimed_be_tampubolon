{
  "SchemaCreateForUser": {
    "type": "object",
    "properties": {
      "file_image": {
        "type": "string",
        "format": "base64",
        "description": "Upload Foto Profile"
      },
      "name": {
        "type": "string",
        "description": "Enter your name"
      },
      "email": {
        "type": "string",
        "description": "Enter your email",
        "required": true
      },
      "phone_number": {
        "type": "string",
        "description": "Enter your phone number"
      },
      "password": {
        "type": "string",
        "description": "Enter your password"
      },
      "gender": {
        "type": "string",
        "enum": ["male", "female"],
        "description": "Choose your gender"
      },
      "has_work_unit": {
        "type": "number",
        "enum": [1, 0],
        "description": "Yes = 1;  No = 0"
      },
      "unit_id": {
        "type": "string",
        "description": "Enter role_id (uuid). Example: role_id=de189b42-7b63-4e52-9f3c-491e431d046e"
      },
      "role_id": {
        "type": "string",
        "description": "Enter role_id (uuid). Example: role_id=de189b42-7b63-4e52-9f3c-491e431d046e"
      }
    }
  },
  "SchemaUpdateForUser": {
    "type": "object",
    "properties": {
      "file_image": {
        "type": "string",
        "format": "base64",
        "description": "Upload Foto Profile"
      },
      "nip": {
        "type": "string",
        "description": "Enter your nip (opsional)"
      },
      "name": {
        "type": "string",
        "description": "Enter your name"
      },
      "email": {
        "type": "string",
        "description": "Enter your email",
        "required": true
      },
      "phone_number": {
        "type": "string",
        "description": "Enter your phone number"
      },
      "gender": {
        "type": "string",
        "enum": ["male", "female"],
        "description": "Choose your gender"
      },
      "has_work_unit": {
        "type": "number",
        "enum": [1, 0],
        "description": "Yes = 1;  No = 0"
      },
      "unit_id": {
        "type": "string",
        "description": "Enter role_id (uuid). Example: role_id=de189b42-7b63-4e52-9f3c-491e431d046e"
      },
      "role_id": {
        "type": "string",
        "description": "Enter role_id (uuid). Example: role_id=de189b42-7b63-4e52-9f3c-491e431d046e"
      },
      "start_work_at": {
        "type": "string",
        "default": "08:30",
        "description": "Jam Kerja (Mulai) - Opsional"
      },
      "end_work_at": {
        "type": "string",
        "default": "18:30",
        "description": "Jam Kerja (Berakhir) - Opsional"
      },
      "address": {
        "type": "string",
        "description": "Enter your address (opsional)"
      }
    }
  }
}
